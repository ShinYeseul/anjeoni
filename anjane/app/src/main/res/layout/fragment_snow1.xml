<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".action.Snow.SnowAction">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.3"
                                            app:riv_corner_radius_top_left="20dp"
                                            app:riv_corner_radius_top_right="20dp"
                                            android:background="@color/anjane"
                                            android:src="@drawable/after_snow1"
                                            app:riv_border_color="#333333"
                                            app:riv_mutate_background="true"
                                            app:riv_oval="false" />

                                        <TextView
                                            android:layout_margin="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.2"
                                            android:textSize="12dp"
                                            android:text=" 내 집 앞 눈을 수시로 치웁니다." />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.3"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/after_snow2"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />

                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.2"
                                    android:textSize="12dp"
                                    android:text="개인 차량 이용을 줄이고 대중교통을 이용합니다.
" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.3"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/after_snow3"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />

                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.2"
                                    android:textSize="12dp"
                                    android:text=" 차량 운행 시에는 저속 운행하고 안전거리를 확보합니다." />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.3"
                                            app:riv_corner_radius_top_left="20dp"
                                            app:riv_corner_radius_top_right="20dp"
                                            android:background="@color/anjane"
                                            android:src="@drawable/after_snow4"
                                            app:riv_border_color="#333333"
                                            app:riv_mutate_background="true"
                                            app:riv_oval="false" />

                                        <TextView
                                            android:layout_margin="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.4"
                                            android:textSize="12dp"
                                            android:text="차량이 고립될 때는 119에 신고하고 차 안에서 TV, 라디오, 인터넷 등을 통해 기상 상황을 확인하며 구조를 기다립니다." />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                </LinearLayout>
        </ScrollView>

</LinearLayout>