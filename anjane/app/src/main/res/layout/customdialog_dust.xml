<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="범례\n"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dust_ivgood"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"></ImageView>
            <TextView
                android:id="@+id/dust_tvgood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dust_ivnormal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"></ImageView>
            <TextView
                android:id="@+id/dust_tvnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dust_ivbad"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"></ImageView>
        <TextView
            android:id="@+id/dust_tvbad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dust_ivverybad"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"></ImageView>
        <TextView
            android:id="@+id/dust_tvverybad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>