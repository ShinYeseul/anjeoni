<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.Wind.Wind1Fragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_margin="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.3"
                                            app:riv_corner_radius_top_left="20dp"
                                            app:riv_corner_radius_top_right="20dp"
                                            android:background="@color/anjane"
                                            android:src="@drawable/wind03"
                                            app:riv_border_color="#333333"
                                            app:riv_mutate_background="true"
                                            app:riv_oval="false" />
                                        <TextView
                                            android:layout_margin="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.4"
                                            android:textSize="12dp"
                                            android:text="대피 시에는 쓰러질 위험이 있는 나무 밑이나 전신주 밑을 피하고 안전한 건물을 이용합니다." />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            android:layout_margin="10dp"
                            card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.3"
                                            app:riv_corner_radius_top_left="20dp"
                                            app:riv_corner_radius_top_right="20dp"
                                            android:background="@color/anjane"
                                            android:src="@drawable/wind4"
                                            app:riv_border_color="#333333"
                                            app:riv_mutate_background="true"
                                            app:riv_oval="false" />
                                        <TextView
                                            android:layout_margin="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.4"
                                            android:textSize="12dp"
                                            android:text="공사장과 같이 날아오는 물건이 있거나 낙하물의 위험이 많은 곳은 가까이 가지 않도록 합니다." />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.3"
                                            app:riv_corner_radius_top_left="20dp"
                                            app:riv_corner_radius_top_right="20dp"
                                            android:background="@color/anjane"
                                            android:src="@drawable/wind5"
                                            app:riv_border_color="#333333"
                                            app:riv_mutate_background="true"
                                            app:riv_oval="false" />
                                        <TextView
                                            android:layout_margin="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.4"
                                            android:textSize="12dp"
                                            android:text="노약자, 장애인 등이 거주하는 가정의 경우에는 비상시 대피 방법과 연락 방법을 가족 또는 이웃 등과 사전에 의논합니다." />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            xmlns:app="http://schemas.android.com/tools"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.3"
                                            app:riv_corner_radius_top_left="20dp"
                                            app:riv_corner_radius_top_right="20dp"
                                            android:background="@color/anjane"
                                            android:src="@drawable/wind6"
                                            app:riv_border_color="#333333"
                                            app:riv_mutate_background="true"
                                            app:riv_oval="false" />
                                        <TextView
                                            android:layout_margin="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.3"
                                            android:textSize="12dp"
                                            android:text="바닷가는 파도에 휩쓸릴 위험이 있으니 나가지 않습니다." />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                </LinearLayout>

        </ScrollView>

</FrameLayout>