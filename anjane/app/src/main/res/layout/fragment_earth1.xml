<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true"
                    android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/earthquakes_action"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />

                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:textSize="12dp"
                                    android:text="튼튼한 탁자 아래에 들어가 몸을 보호합니다."/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true"
                    android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/earthquakes_action2"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />

                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:textSize="12dp"
                                    android:text="가스와 전깃불을 차단하고 문을 열어 출구를 확보합니다."/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true"
                    android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/earthquakes_action3"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />
                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.2"
                                    android:textSize="12dp"
                                    android:text="지진이 나면 엘리베이터가 멈출 수 있으므로 타지 말고 계단을 이용하여 건물 밖으로 대피합니다."/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:app="http://schemas.android.com/tools"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:text="밖으로 나갈 때에는 떨어지는 유리, 간판, 기와 등에 주의하며, 소지품으로 몸을 보호하면서 침착하게 대피합니다." />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true"
                    android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/earthquakes_action4"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />

                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:textSize="12dp"
                                    android:text="건물이나 담장으로부터 떨어져 이동합니다."/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:app="http://schemas.android.com/tools"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:text=" 건물과 담장에서 최대한 멀리 떨어져 가방이나 손으로 머리를 보호하면서 대피합니다." />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true"
                    android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/earthquakes_action5"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />
                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:textSize="12dp"
                                    android:text="낙하물이 없는 넓은 공간으로 대피합니다."/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true"
                    android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:riv_corner_radius_top_left="20dp"
                                    app:riv_corner_radius_top_right="20dp"
                                    android:background="@color/anjane"
                                    android:src="@drawable/earthquakes_action6"
                                    app:riv_border_color="#333333"
                                    app:riv_mutate_background="true"
                                    app:riv_oval="false" />

                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:textSize="12dp"
                                    android:text="올바른 정보에 따라 행동합니다."/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:app="http://schemas.android.com/tools"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <TextView
                                    android:layout_margin="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:text="라디오나 공공기관의 안내 방송 등이 제공된 정보에 따라 행동합니다." />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
</ScrollView>